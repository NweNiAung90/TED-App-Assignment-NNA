<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_news_speaker"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:src="@drawable/richard_seymour"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/margin_medium_3"
        android:layout_marginBottom="@dimen/margin_medium_2"/>

    <!-- constraint -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_regular_2x"
        android:text="Richard Seymour"
        android:textColor="@color/secondary_black_text"
        android:layout_alignTop="@id/iv_news_speaker"
        android:layout_toRightOf="@id/iv_news_speaker"
        android:layout_marginLeft="@dimen/margin_medium_2"/>

    <!-- constraint -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How beauty feels"
        android:textSize="@dimen/text_regular_2x"
        android:layout_below="@+id/tv_name"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_marginBottom="@dimen/margin_small_n"
        android:textColor="@color/primary_black_text"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_news_speaker"
        android:layout_alignRight="@+id/iv_news_speaker"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@android:color/black"
        android:text="17:15"
        android:textSize="@dimen/text_small"
        android:textColor="@color/secondary_text"
        />

    <ImageButton
        android:id="@+id/iv_three_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_secondary_24dp"
        android:layout_alignTop="@id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_medium_3"
        style="?android:attr/actionOverflowButtonStyle"/>
</RelativeLayout>